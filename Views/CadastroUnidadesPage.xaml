<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:Avalia_.ViewModels"
             xmlns:models="clr-namespace:Avalia_.Data.Models"
             x:Class="Avalia_.Views.CadastroUnidadesPage"
             x:Name="CadastroUnidadesPageRef"
             x:DataType="vm:CadastroUnidadesViewModel"
             Title="Cadastro de Unidades"
             Shell.NavBarIsVisible="True"
             BackgroundColor="#F3F4F6">


    <ContentPage.Resources>
        <ResourceDictionary xmlns:conv="clr-namespace:Avalia_.Helpers.Converters">
            <conv:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>


    <ScrollView>
        <VerticalStackLayout Spacing="18"
                             Padding="24,36">

            <!-- Botão Voltar -->
            <Button Text="Voltar"
                    HorizontalOptions="Start"
                    Clicked="OnVoltarClicked"
                    BackgroundColor="#0786D6"
                    TextColor="#111827"
                    FontSize="Body"
                    Padding="20,0"
                    Margin="0,0,0,0" />

            <Label Text="Nova Unidade"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#111827" />

            <VerticalStackLayout Spacing="6">
                <Label Text="Nome da Unidade"
                       FontSize="14"
                       TextColor="#6B7280" />
                <Border StrokeThickness="1"
                        Stroke="#D1D5DB"
                        BackgroundColor="White"
                        StrokeShape="RoundRectangle 8">
                    <Entry Placeholder="Ex.: Unidade Centro"
                           Text="{Binding Nome}"
                           FontSize="16"
                           TextColor="#111827"
                           PlaceholderColor="#9CA3AF"
                           HeightRequest="44"
                           Margin="6,0"
                           ReturnType="Done">
                        <Entry.Behaviors>
                            <toolkit:EventToCommandBehavior EventName="Completed"
                                                            Command="{Binding SalvarCommand}" />
                        </Entry.Behaviors>
                    </Entry>
                </Border>
            </VerticalStackLayout>

            <Grid ColumnDefinitions="*,Auto"
                  VerticalOptions="Center">
                <Button Grid.Column="0"
                        Text="Salvar"
                        Command="{Binding SalvarCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                        BackgroundColor="#2563EB"
                        TextColor="White"
                        FontSize="18"
                        CornerRadius="8"
                        HeightRequest="50" />

                <ActivityIndicator Grid.Column="1"
                                   IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   VerticalOptions="Center"
                                   Margin="12,0,0,0" />
            </Grid>

            <VerticalStackLayout Spacing="10"
                                 Margin="0,28,0,0">
                <Label Text="Este dispositivo atenderá qual unidade?"
                       FontAttributes="Bold"
                       FontSize="18"
                       TextColor="#111827" />

                <Border StrokeThickness="1"
                        Stroke="#D1D5DB"
                        BackgroundColor="White"
                        StrokeShape="RoundRectangle 8">
                    <Picker Title="Selecione a unidade"
                            ItemsSource="{Binding Unidades}"
                            ItemDisplayBinding="{Binding Nome}"
                            SelectedItem="{Binding UnidadeSelecionada}"
                            FontSize="16"
                            HeightRequest="44"
                            Margin="6,0" />
                </Border>

                <Grid ColumnDefinitions="*,Auto"
                      VerticalOptions="Center">
                    <Button Grid.Column="0"
                            Text="Confirmar vínculo"
                            Command="{Binding ConfirmarVinculoCommand}"
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                            BackgroundColor="#16A34A"
                            TextColor="White"
                            FontSize="18"
                            CornerRadius="8"
                            HeightRequest="50" />

                    <ActivityIndicator Grid.Column="1"
                                       IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       VerticalOptions="Center"
                                       Margin="12,0,0,0" />
                </Grid>
            </VerticalStackLayout>

            <Label Text="{Binding StatusMessage}"
                   TextColor="#059669"
                   FontSize="14"
                   IsVisible="{Binding ShowStatus}" />

            <!-- LISTA DE UNIDADES -->
            <Label Text="Unidades cadastradas"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#111827"
                   Margin="0,24,0,8" />

            <CollectionView ItemsSource="{Binding Unidades}"
                            HeightRequest="320">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Unidade">
                        <Border StrokeThickness="0"
                                BackgroundColor="White"
                                StrokeShape="RoundRectangle 12"
                                Padding="12"
                                Margin="0,0,0,8">
                            <Grid ColumnDefinitions="*,Auto,Auto"
                                  ColumnSpacing="12"
                                  VerticalOptions="Center">

                                <!-- Nome da unidade -->
                                <Label Grid.Column="0"
                                       Text="{Binding Nome}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#111827"
                                       VerticalOptions="Center" />

                                <!-- Botão Editar -->
                                <Button Grid.Column="1"
                                        Text="Editar"
                                        FontSize="12"
                                        Padding="10,4"
                                        BackgroundColor="#3B82F6"
                                        TextColor="White"
                                        Command="{Binding BindingContext.EditarUnidadeCommand, Source={x:Reference CadastroUnidadesPageRef}}"
                                        CommandParameter="{Binding .}" />

                                <!-- Botão Excluir -->
                                <Button Grid.Column="2"
                                        Text="Excluir"
                                        FontSize="12"
                                        Padding="10,4"
                                        BackgroundColor="#EF4444"
                                        TextColor="White"
                                        Command="{Binding BindingContext.ExcluirUnidadeCommand, Source={x:Reference CadastroUnidadesPageRef}}"
                                        CommandParameter="{Binding .}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
